{
  "name": "react-mock-component",
  "version": "2.3.1",
  "description": "Create type safe mock React components to use in tests",
  "keywords": [
    "tdd",
    "react",
    "spy",
    "stub",
    "mock",
    "test",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/NiGhTTraX/react-mock-component.git"
  },
  "author": "Andrei Picus",
  "license": "MIT",
  "homepage": "https://github.com/NiGhTTraX/react-mock-component",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn run clean && yarn run compile",
    "clean": "rm -rf ./dist",
    "compile": "tsc -p tsconfig.build.json",
    "prepublishOnly": "yarn run build",
    "lint": "eslint --ext ts,tsx,js .",
    "test": "tdd-buffet test --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint"
  },
  "dependencies": {
    "@types/react": "~17.0.0",
    "@types/sinon": "~9.0.0",
    "sinon": "~9.2.0"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@nighttrax/eslint-config-tsx": "~7.0.0",
    "@tdd-buffet/react": "~1.3.0",
    "@tdd-buffet/tsconfig": "~1.0.0",
    "@tdd-buffet/jest-config": "~2.0.0",
    "@types/node": "~12.12.0",
    "@types/react-dom": "~17.0.0",
    "codecov": "~3.8.0",
    "eslint": "~7.16.0",
    "husky": "~4.3.0",
    "lint-staged": "~10.5.0",
    "react": "~17.0.0",
    "react-dom": "~17.0.0",
    "tdd-buffet": "~2.1.0",
    "typescript": "~4.1.0"
  }
}
